<?php

// Database configuration
$host = '192.168.244.170';
$dbname = 'test';
$username = 'root';
$password = 'my-secret-password';

try {
    // Create a new PDO instance
    $pdo = new PDO("mysql:host=$host;dbname=$dbname", $username, $password);

    // Execute the SQL query to select all rows from visit_data
    $query = "SELECT * FROM test.visit_data";
    $stmt = $pdo->query($query);

    // Fetch all rows as an associative array
    $results = $stmt->fetchAll(PDO::FETCH_ASSOC);

} catch (PDOException $e) {
    die("Database error: " . $e->getMessage());
}
?>

<!DOCTYPE html>
<html>
<head>
    <title>Visit Data</title>
</head>
<body>
    <h1>Visit Data</h1>

    <?php if (count($results) > 0): ?>
    <table border="1">
        <tr>
            <th>ID</th>
            <th>Visit Date</th>
            <!-- Add more column headers here -->
        </tr>
        <?php foreach ($results as $row): ?>
        <tr>
            <td><?php echo $row['id']; ?></td>
            <td><?php echo $row['visit_date']; ?></td>
            <!-- Add more table cells for other columns as needed -->
        </tr>
        <?php endforeach; ?>
    </table>
    <?php else: ?>
    <p>No data available.</p>
    <?php endif; ?>
</body>
</html>
